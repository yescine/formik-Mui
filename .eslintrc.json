{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react-hooks/recommended"
        ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "react/jsx-uses-react": "error",   
        "react/jsx-uses-vars": "error",
        "react-hooks/rules-of-hooks": "error",
        "camelcase":"error",
        "comma-spacing":"warn",
        "eqeqeq":"warn",
        "max-params":["warn",5],
        "no-magic-numbers":"error",
        "max-lines":["error",1000],
        "max-len":["error",150],
        "arrow-spacing":"warn",
        "no-console": "warn",
        "no-alert":"warn",
        "no-dupe-args":"error",
        "no-dupe-keys":"error",
        "no-duplicate-case":"error",
        "no-multi-spaces":"warn",
        "id-length":"error",
        "id-blacklist": ["error", "e", "cb"],
        "space-before-function-paren": ["error", "always"],
        "space-before-blocks":"off",
        "spaced-comment":"warn",
        "no-empty":"warn",
        "keyword-spacing":"warn",
        "no-var":"error",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "off",
            "windows"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ]
    }
}
